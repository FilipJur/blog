---
const pageTitle = "O mě:3";

const identity = {
  name: "Filip",
  country: "Czech Republic",
  city: "Zlín",
  occupation: "Freelance Web Developer",
  hobbies: ["coding", "pivo(už ne) ", "gaming"],
};
const skills = ["HTML", "CSS", "SASS", "JavaScript", "WordPress"];

const happy = true;
const finished = false;
const goal = 3;


const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <style define:vars={{skillColor, fontWeight, textCase}}>
      h1{
        color: purple;
        font-size: 4rem;
      }
      .skill{
        list-style: none;
        font-weight: var(--textCase);
        text-transform: var(--textCase);
        color:var(--skillColor);
      }
    </style>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/blog/">Blog</a>
    <h1>{pageTitle}</h1>
    <h2>... and my new Astro site!</h2>

    <p>Fakty o mně:3</p>
    <ul>
      <li>Jmenuji se {identity.name} :3</li>
      <li>žiju v {identity.city} :3</li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Zájmy :3 {identity.hobbies[0]} a {identity.hobbies[1]} a{" "}
            {identity.hobbies[2]}
          </li>
        )
      }
    </ul>
    <p>Umím:3</p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro</p>}
    {finished && <p>I finished this tutorial</p>}
    {goal === 3 ? <p>My goal is to finish in 3 days</p> : <p>My goal is not 3 days.</p>}
  </body>
</html>
